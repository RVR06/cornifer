// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false, // set this to true to hide the "out" folder with the compiled JS files
        "dist": false // set this to true to hide the "dist" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true,
        "dist": true,
        "node_modules": true
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#f6652d",
        "activityBar.background": "#f6652d",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#0af54c",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#f6652d",
        "statusBar.background": "#e6470a",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#f6652d",
        "statusBarItem.remoteBackground": "#e6470a",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#e6470a",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#e6470a99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#e6470a",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "peacock.remoteColor": "#20cf1b"
}